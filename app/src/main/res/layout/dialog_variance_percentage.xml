<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="onClick"
            type="com.zebpay.demo.dipen.jansari.interfaces.ClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/scale_32dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/scale_16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/variance_by_percentage"
            android:textColor="@color/black"
            android:textSize="@dimen/text_20sp" />

        <EditText
            android:id="@+id/edt_percentage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/scale_20dp"
            android:hint="@string/enter_percentage"
            android:inputType="number"
            android:maxLength="2"
            android:maxLines="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/scale_20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_set"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/scale_10dp"
                android:layout_marginRight="@dimen/scale_10dp"
                android:layout_weight="1"
                android:onClick="@{onClick.onClick}"
                android:text="@string/set" />

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/scale_10dp"
                android:layout_marginRight="@dimen/scale_10dp"
                android:layout_weight="1"
                android:onClick="@{onClick.onClick}"
                android:text="@string/cancel" />

        </LinearLayout>

    </LinearLayout>
</layout>